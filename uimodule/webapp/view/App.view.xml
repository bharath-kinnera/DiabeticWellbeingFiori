 <mvc:View controllerName="T1D.DiabeticWellbeing.controller.App"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <Page title="Diabetic Profile" titleAlignment="Center" titleLevel ="H1">
		<content>

            <Table id="idDiabeticProfTable" items= "{/DiabeticProfile}" mode= "SingleSelectMaster" selectionChange="OnSelectionChange">
                <headerToolbar>
                    <Toolbar>
                        <Label text="Diabetic Profile List" design="Bold" class="sapMH3FontSize" />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column> <Label text = "ID" /> </Column>
                    <Column> <Label text = "IGR" /> </Column>
                    <Column> <Label text = "ICR" /> </Column>
                    <Column> <Label text = "Target" /> </Column>
                    <Column> <Label text = "Basal" /> </Column>
                    <Column> <Label text = "BreakfastFactor" /> </Column>
                    <Column> <Label text = "LunchFactor" /> </Column>
                    <Column> <Label text = "SnackFactor" /> </Column>
                    <Column> <Label text = "DinnerFactor" /> </Column>
                    <Column> <Label text = "Comments" /> </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{IGR}" />
                            <Text text="{ICR}" />
                            <Text text="{Target}" />
                            <Text text="{Basal}" />
                            <Text text="{Breakfast_factor}" />
                            <Text text="{Lunch_factor}" />
                            <Text text="{Snacks_factor}" />
                            <Text text="{Dinner_factor}" />
                            <Text text="{Comments}" />
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
         </content>
         <footer>
            <Bar>
                <contentRight>
                    <Button text="Save" />
                </contentRight>
            </Bar>
         </footer>
    </Page>
  </App>
</mvc:View>
